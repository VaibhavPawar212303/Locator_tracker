{
    "manifest_version": 3,
    "name": "User Action Tracker",
    "version": "1.0",
    "description": "A Chrome extension that tracks user actions using Puppeteer.",
    "permissions": ["activeTab", "scripting", "tabs"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html"
    }
  }
  